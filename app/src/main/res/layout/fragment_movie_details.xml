<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="movie"
            type="com.example.as_kotlin.data.model.Movie" />
        <variable
            name="viewModel"
            type="com.example.as_kotlin.ui.viewmodel.MovieDetailsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_green"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:titleTextColor="@color/white">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEdit"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="16dp"
                android:minHeight="36dp"
                android:minWidth="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/edit"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:cornerRadius="18dp"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp" />

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/movieTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="@{movie.title}"
                    android:textAppearance="?attr/textAppearanceHeadline4"
                    android:textColor="#FF212121"
                    android:textStyle="bold"
                    tools:text="O Poderoso Chefão" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="@string/director"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="#FF757575"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/movieDirector"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="@{movie.director}"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="#FF212121"
                            tools:text="Francis Ford Coppola" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="@string/release_year"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="#FF757575"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/movieYear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{String.valueOf(movie.releaseYear)}"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="#FF212121"
                            tools:text="1972" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="@string/synopsis"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="#FF757575"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/movieSynopsis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="4dp"
                            android:text="@{movie.synopsis}"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textColor="#FF212121"
                            tools:text="A saga da família Corleone..." />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>
